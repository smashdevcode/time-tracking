<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/bootstrapcss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

	<div class="navbar navbar-static-top navbar-default" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Time Tracking", "Index", "Home", new { }, new { @class = "navbar-brand" })
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					@Html.BootstrapMenuItem("Home", "Index", "Home")
					@Html.BootstrapMenuItem("Projects", "Index", "Project")
				</ul>
			</div>
		</div>
	</div>

	<div class="container">

		<div class="row">

			<div class="col-md-12">

				<div class="page-header">
					<h1>@ViewBag.Title</h1>
				</div>
	
			</div>

		</div>

		<div class="row">

			<div class="col-md-9">

				@RenderBody()

			</div>

			<div class="col-md-3">

				@RenderSection("secondary", required: false)

			</div>

		</div>

	</div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/knockout")
	<script src="~/Scripts/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
